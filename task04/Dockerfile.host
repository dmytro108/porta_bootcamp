# Dockerfile for LAN hosts (host1 and host2)
# Base: Alpine Linux for minimal footprint
# Purpose: Test hosts for connectivity verification

FROM alpine:latest

# Install basic networking tools for testing
RUN apk add --no-cache \
    iputils \
    bash \
    net-tools \
    bind-tools \
    tcpdump \
    curl \
    traceroute \
    mtr

# Set working directory
WORKDIR /root

# Default command: keep container running for interactive testing
CMD ["/bin/bash", "-c", "tail -f /dev/null"]
